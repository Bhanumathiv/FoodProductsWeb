@model System.Data.DataTable

@{
    ViewData["Title"] = "Current Products";
}
<div class="jumbotron">
    <h1 class="text-center">@ViewData["Title"]</h1>
</div>

<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>
                ProductName
            </th>
            <th>
                Price
            </th>
            <th>
                <a asp-action="AddorEdit" color="red">Add Product</a>
            </th>
           </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <tr>
                <td>
                    @Model.Rows[i]["ProductName"]
                </td>
                <td>
                    @Model.Rows[i]["Price"]
                </td>
                <td>
                    <a asp-action="AddorEdit" asp-route-id="@Model.Rows[i]["PId"]">Edit</a> |

                    <a asp-action="Delete" asp-route-id="@Model.Rows[i]["PId"]">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
